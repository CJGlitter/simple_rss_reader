<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div id="articles">
  <table>
    <% @articles.each do |article| %>
      <tr>
        <td class="content-container <%= read_state(article.read_status) %>">
        <h3><%= link_to article.title, article, 'data-turbo' => false %></h3>
        <p><%= article.description.truncate_words(15) %></p>
      </td>
      </tr>
    <% end %>
</div>
