<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div id="articles">
  <table>
    <% @articles.each do |article| %>
      <tr>
        <td>
          <%= link_to article do %>
            <h3><%= article.title %></h3>
            <p><%= article.description.truncate_words(15) %>
          <% end %>
        </td>
      </tr>
    <% end %>
</div>
